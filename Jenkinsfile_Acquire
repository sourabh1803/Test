pipeline {
    agent any
    stages {
         stage('Cloning from Git Hub'){
          steps{
        	   sh 'sh /home/ubuntu/git_clone.sh'
                }
                       }
        stage('File Integrity Check'){
          steps{
        	   sh 'sh /home/ubuntu/md.sh'
                }
                       }
         stage('Security Scan'){
          steps{
        	   sh 'python /home/ubuntu/scn.py'
                }
                }
           stage('Updating Git Hub'){
          steps{
        	   sh 'sh /home/ubuntu/git_upload.sh'
                }
                       }
            }
           }
